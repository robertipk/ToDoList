<% if user_signed_in? %>
	<% @items.each do |item| %>
	  <% if item.completed? %>
		<h2 style="opacity: 0.5"><strike><%= link_to item.title, item_path(item) %></strike></h2>
		<p style="opacity: 0.5"><%= item.description %></h2>
		<p style="opacity: 0.5">Completed <%= time_ago_in_words(item.completed_at) %> ago </p>
		<p><%= link_to "Mark as Complete", complete_item_path(item), method: :patch %></p>
		<p><%= link_to "Delete", item, method: :delete, data: {confirm: "Are you sure?" } %></p>
	  <% else %>
	    <h2><%= link_to item.title, item_path(item) %></h2>
		<p><%= item.description %></h2>
		<p>Created<%= time_ago_in_words(item.created_at) %> ago </p>
		<p><%= link_to "Mark as Complete", complete_item_path(item), method: :patch %></p>
		<p><%= link_to "Delete", item, method: :delete, data: {confirm: "Are you sure?" } %></p>
	  <% end %>
	<% end %>
<% else %>
	<%= render 'layouts/static_landing_page' %>
<% end %>	

